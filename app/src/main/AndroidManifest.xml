<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dmudg16.hostelbuddy" >
    <uses-permission android:name="com.google.android.c2dm.permission.RECIEVE"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="com.example.gcm.permission.C2D_MESSAGE"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/logohb"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".SearchResultsActivity" />

        <activity
            android:name=".startActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
          <activity
             android:name=".SearchResultsActivity"
             android:label="@string/app_name"
             android:launchMode="singleTop">
             <intent-filter>
                 <action android:name="android.intent.action.SEARCH" />

                 <category android:name="android.intent.category.DEFAULT" />
             </intent-filter>
               <meta-data android:name="android.app.searchable"
                  android:resource="@xml/searchable" />
         </activity>
         <activity
             android:name=".showcomplaints"
             android:label="@string/app_name" >
             <intent-filter>
                 <action android:name="com.example.dmudg16.hostelbuddy.showcomplaints" />

                 <category android:name="android.intent.category.DEFAULT" />
             </intent-filter>
         </activity>
        <activity
            android:name=".washroom"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.dmudg16.hostelbuddy.washroom" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Electrician"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.dmudg16.hostelbuddy.electrician" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
             android:name=".loginpage"
             android:label="@string/app_name" >
             <intent-filter>
                 <action android:name="com.example.dmudg16.hostelbuddy.loginpage" />

                 <category android:name="android.intent.category.DEFAULT" />
             </intent-filter>
         </activity>
         <activity
             android:name=".HomePage"
             android:label="@string/app_name" >
             <intent-filter>
                 <action android:name="com.example.dmudg16.hostelbuddy.homepage" />

                 <category android:name="android.intent.category.DEFAULT" />
             </intent-filter>
         </activity>
         <activity
             android:name=".sportscomplaints"
             android:label="@string/app_name" >
             <intent-filter>
                 <action android:name="com.example.dmudg16.hostelbuddy.sportscomplaints" />

                 <category android:name="android.intent.category.DEFAULT" />
             </intent-filter>
         </activity>
         <activity
             android:name=".ProblemPage"
             android:label="@string/app_name"
             android:windowSoftInputMode="stateHidden|adjustResize">
             <intent-filter>
                 <action android:name="com.example.dmudg16.hostelbuddy.writecomplaint" />

                 <category android:name="android.intent.category.DEFAULT" />
             </intent-filter>

         </activity>
        <activity
            android:name=".Unsolved"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="com.example.dmudg16.hostelbuddy.unsolved" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <activity
            android:name=".Solved"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="com.example.dmudg16.hostelbuddy.solved" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
     </application>

 </manifest>
